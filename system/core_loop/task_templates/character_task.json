{
    "type": "character_task",
    "template": {
        "task_name": "Update Character",
        "description": "Create a new character or update an existing one in the Cities of Lights universe",
        "required_inputs": [
            "character_id",
            "action_type",
            "current_location"
        ],
        "optional_inputs": [
            "personality_traits",
            "skills",
            "relationships",
            "goals",
            "recent_experiences"
        ],
        "output_format": {
            "character_profile": "JSON object",
            "narrative_update": "Text file"
        },
        "estimated_duration": "1-2 hours",
        "priority_factors": [
            "character_importance",
            "story_relevance",
            "time_since_last_update"
        ],
        "dependencies": [
            "world_state",
            "ongoing_stories",
            "relationship_network"
        ]
    }
}
